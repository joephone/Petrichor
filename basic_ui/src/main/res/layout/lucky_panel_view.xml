<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="316dp"
    android:layout_height="316dp"
    android:background="@drawable/lucky_panel_bg_panel"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/bg_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/lucky_panel_bubble0" />

    <ImageView
        android:id="@+id/bg_2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/lucky_panel_bubble1"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="25dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.transcendence.ui.widget.luckpanel.PanelItemView
                android:id="@+id/item1"
                android:layout_width="82dp"
                android:layout_height="82dp"
                android:background="@drawable/lucky_panel_bg_item1" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <com.transcendence.ui.widget.luckpanel.PanelItemView
                android:id="@+id/item2"
                android:layout_width="82dp"
                android:layout_height="82dp"
                android:background="@drawable/lucky_panel_bg_item2" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <com.transcendence.ui.widget.luckpanel.PanelItemView
                android:id="@+id/item3"
                android:layout_width="82dp"
                android:layout_height="82dp"
                android:background="@drawable/lucky_panel_bg_item3" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.transcendence.ui.widget.luckpanel.PanelItemView
                android:id="@+id/item4"
                android:layout_width="82dp"
                android:layout_height="82dp"
                android:background="@drawable/lucky_panel_bg_item4" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />


            <View
                android:layout_width="82dp"
                android:layout_height="82dp" />


            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <com.transcendence.ui.widget.luckpanel.PanelItemView
                android:id="@+id/item6"
                android:layout_width="82dp"
                android:layout_height="82dp"
                android:background="@drawable/lucky_panel_bg_item6" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.transcendence.ui.widget.luckpanel.PanelItemView
                android:id="@+id/item7"
                android:layout_width="82dp"
                android:layout_height="82dp"
                android:background="@drawable/lucky_panel_bg_item7" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <com.transcendence.ui.widget.luckpanel.PanelItemView
                android:id="@+id/item8"
                android:layout_width="82dp"
                android:layout_height="82dp"
                android:background="@drawable/lucky_panel_bg_item8" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <com.transcendence.ui.widget.luckpanel.PanelItemView
                android:id="@+id/item9"
                android:layout_width="82dp"
                android:layout_height="82dp"
                android:background="@drawable/lucky_panel_bg_item9" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>